<!DOCTYPE html>
<html>
  <head>
    <title>Train Spotter</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Almendra+SC|Artifika|Cinzel|Kotta+One|Bungee" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <div class=" top-bar" data-topbar >
        <span class="title">Train Spotter</span>

        <div id="header-nav" class=" top-bar-left">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'About Us' %></li>
        </div>

        <div class="top-bar-right">
          <% if current_user %>
          <h3><%= link_to current_user.username, user_path(current_user.id) %></h3>
          <li><%= link_to "Log out", logout_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "Log in or Sign up with Facebook", "/auth/facebook" %></li>
          <li><%= link_to "Log in or Sign up with Github", "/auth/github" %></li>

          <% end %>
        </div>

      </div>
    </header>
    <div id="body">

      <%= yield %>
      <div id='app'>
      </div>
    </div>
  </body>
</html>
